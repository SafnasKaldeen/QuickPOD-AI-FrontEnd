        </div>
        <Transcript Transcript={POD?.podcast.transcript.content} />
      </main>
    </div>
  </div>
  <div
    class="absolute h-screen inset-0 z-[-1] bg-gradient-to-b from-context"
    style={`--context-color:${POD?.blog.title}`}
