---
const gender = "Male"; // Change to "Male" , "Female" or undefined to test different scenarios

const avatarSrc =
  gender === "Male"
    ? "/images/Male-avatar.png"
    : gender === "Female"
      ? "/images/Female-avatar.png"
      : "/images/Undefined-avatar.png";
---

<div class="card-body p-4">
  <div class="flex flex-col items-center text-center">
    <img
      id="avatarImage"
      src={avatarSrc}
      alt="Admin"
      class="rounded-full w-36 h-36 object-cover border-4 border-primary"
    />
    <div class="mt-3">

    
      <button
        id="changeAvatarButton"
        class="btn btn-outline-primary border border-primary text-primary px-4 py-2 rounded mt-2 text-bold hover:bg-primary hover:text-black"
        >Change</button
      >
      <input type="file" id="avatarInput" accept="image/*" class="hidden" />
    </div>
  </div>
</div>

<script>
  document
    .getElementById("changeAvatarButton")
    .addEventListener("click", function () {
      document.getElementById("avatarInput").click();
    });

  document
    .getElementById("avatarInput")
    .addEventListener("change", function () {
      const file = this.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function (e) {
          document.getElementById("avatarImage").src = e.target.result;
        };
        reader.readAsDataURL(file);
      }
    });
</script>
