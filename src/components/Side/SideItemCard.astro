//   artists: ["Avicii"],
//   image:
//     "https://th.bing.com/th/id/R.c20fc55ff5a59c74bb568a663f40e572?rik=3hiy3MKf2PQUnA&pid=ImgRaw&r=0",
//   duration: "3:11",
//   album: "The Days / Nights",
