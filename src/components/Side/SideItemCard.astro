---
import type { Song } from "../../lib/data";
import InlineArtists from "../InlineArtists.astro";
import PlayButton from "../PlayButton.astro";
import { colors } from "../../lib/colors";
import PureInlineArtists from "../PureInlineArtists.astro";

// Define the actual colorMapping object
export const colorMapping = {
  "Sports Mix": colors.teal,
  "Political Mix": colors.green,
  "Business Mix": colors.blue,
  "Tech Mix": colors.red,
  "Korean Mix": colors.pink,
  "Health & Wellness Mix": colors.gray,
};

interface Props {
  song: Song;
}

const { song } = Astro.props;

const CLR = colorMapping[song.artists[0]];
---

<a
  href=`/podcast/${song.title}`
  class="playlist-item flex group relative p-2 overflow-hidden items-center gap-5 rounded-md shadow-lg hover:shadow-xl outline-none hover:bg-zinc-500/10 focus:bg-zinc-500/50"
  data-color={CLR.dark}
>
  <div class="h-12 w-12 flex-none">
    <img
      src={song.image}
      alt={song.title}
      class="object-cover rounded h-full w-full shadow-[5px_0_30px_0px_rgba(0,0,0,0.3)]"
    />
  </div>
  <div class="flex flex-auto flex-col truncate">
    <div class="font-semibold w-full flex-none truncate">{song.title}</div>
    <div class="text-gray-400 text-sm truncate flex-1">
      <PureInlineArtists artists={song.artists} />
    </div>
  </div>
</a>
