---
import Layout from '../../../layouts/Layout.astro';
import Container from '../../../componentLandingPage/Container.astro';
import RegistrationAvatarSelection from '../../../components/RegistrationAvatarSelection.astro';
import ChooseTags from '../../../components/ChooseTags.jsx';
---
<Layout title="Add Avatar">
    <body class="dark">
        <div class="relative gap-2 flex items-stretch">
            <div class="rounded-lg bg-zinc-900 flex-1 mx-auto overflow-y-auto">
                <div class="relative h-full" id="home">
                    <div aria-hidden="true"
                        class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20">
                        <div class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700">
                        </div>
                        <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600">
                        </div>
                    </div>
                    <Container class="flex-col align-middle justify-center">
                        <div class="relative flex items-center justify-center">
                            <div class="text-center mx-auto">
                                <div class="flex flex-wrap justify-center gap-y-4 gap-x-6">
                                    <RegistrationAvatarSelection />
                                </div>
                                <div class="flex flex-wrap justify-center gap-y-4 gap-x-6 mt-20">
                                    <ChooseTags client:load />
                                </div>
                            </div>
                        </div>
                        <div class="relative items-center justify-center">
                            <div class="text-center mx-auto">
                                <div class="justify-center">
                                    <button class="bg-purple-700 text-white text-xs uppercase font-semibold px-5 py-3 rounded-lg border border-transparent my-5 cursor-pointer">
                                        Finish Registration
                                    </button>
                                </div>
                            </div>
                        </div>
                    </Container>
                </div>
            </div>
        </div>
        <div id="not-support"
            class="fixed hidden bg-red-700 bottom-0 inset-x-0 rounded-t-md text-center py-2 lg:py-4 z-50 font-semibold">
            It seems your browser does not support view transitions yet :( try it using
            chrome or edge <a class="underline" href="https://github.com/igorm84/spotify-astro-transitions">(see docs
                here)</a>
        </div>
    </body>
</Layout>
