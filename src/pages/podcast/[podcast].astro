---
const { podcast } = Astro.params;

import Layout from "../../layouts/Layout.astro";
import { allPlaylists } from "../../lib/data";
import SideMenu from "../../components/Side/SideMenu.astro";
import PageHeader from "../../components/PageHeader.astro"
import InlineArtists from "../../components/InlineArtists.astro"
import PlayButton from "../../components/PlayButton.astro"
import LikeButton from "../../components/LikeButton.astro"
import MusicsTable from "../../components/MusicsTable.astro"
import AudioPlayer from "../../components/Player/AudioPlayer.jsx"
import Transcript from "../../components/Transcript.astro"


export function getStaticPaths() {
  return allPlaylists.map((playlist) => ({
    params: {
      podcast: playlist.title,
    },
  }));
}

const POD = allPlaylists.find((playlist) => playlist.title === podcast);
